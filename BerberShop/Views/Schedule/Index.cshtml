@model IEnumerable<BarberShop.Models.Appointment>
@using System.Globalization

<h2>Bekleyen Randevu Talepleri</h2>

<table class="table">
    <thead>
        <tr>
            <th>Başlangıç</th>
            <th>Bitiş</th>
            <th>Hizmet</th>
            <th>Müşteri</th>
            <th>Stilist</th>
            <th>Durum</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var appointment in Model)
    {
        <tr>
            <td>@appointment.StartDate.ToString("dd MMM yyyy HH:mm", CultureInfo.InvariantCulture)</td>
            <td>@appointment.EndDate.ToString("HH:mm", CultureInfo.InvariantCulture)</td>
            <td>@appointment.Service</td>
            <td>@appointment.CustomerName</td>
            <td>@appointment.StylistName</td>
            <td>
                <span class="text-warning">Onay Bekliyor</span>
            </td>
        </tr>
    }
    </tbody>
</table>
