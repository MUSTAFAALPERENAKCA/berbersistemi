@model IEnumerable<BarberShop.Models.Appointment>

<h2>Pending Appointment Approvals</h2>

<table class="table">
    <thead>
        <tr>
            <th>Start</th>
            <th>End</th>
            <th>Service</th>
            <th>Stylist</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.StartDate.ToString("dd MMM yyyy HH:mm")</td>
                <td>@appointment.EndDate.ToString("HH:mm")</td>
                <td>@appointment.Service</td>
                <td>@appointment.Stylist?.UserName ?? "Unknown"</td>
                <td>
                    <form asp-action="ConfirmAppointment" method="post" style="display:inline">
                        <input type="hidden" name="id" value="@appointment.Id" />
                        <button type="submit" class="btn btn-success btn-sm">Confirm</button>
                    </form>
                    <form asp-action="RejectAppointment" method="post" style="display:inline">
                        <input type="hidden" name="id" value="@appointment.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
