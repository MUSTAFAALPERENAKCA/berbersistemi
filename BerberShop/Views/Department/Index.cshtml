<h1 style="color: #2c3e50; font-size: 28px; font-weight: bold; text-align: center; margin-top: 40px;">KADROMUZ</h1>

@foreach (var department in Model)
{
    <div class="card mb-4 shadow-sm" style="border-radius: 12px; overflow: hidden;">
        <div class="card-header bg-primary text-white" style="padding: 16px;">
            <h3 class="card-title" style="font-size: 22px; font-weight: bold;">@department.DepartmentName </h3>
        </div>
        <div class="card-body" style="padding: 20px;">
            <ul class="list-group" style="margin: 0; padding: 0; list-style: none;">
                @foreach (var user in department.Users)
                {
                    <span class="badge bg-secondary" style="font-size: 14px;">@user.DepartmentId</span>

                    <li class="list-group-item d-flex justify-content-between align-items-center" style="padding: 12px 16px; border-bottom: 1px solid #eaeaea;">
                        <span style="font-size: 16px; color: #2c3e50;">@user.Name</span>
                        <span class="badge bg-secondary" style="font-size: 14px;">@user.UserName</span>
                    </li>
                }
            </ul>
        </div>
    </div>
}
